package com.bmc.demo;

public class StringBuilderDemo {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Blank Object
		StringBuilder builder=new StringBuilder();
		builder.append(" is independence day of India.");
		builder.insert(0, "15th Aug");
		builder.append("We have celebrated independence day [");
		int sum=0;
		for(int i=1;i<71;i++){
			sum+=i;
		
		}
		builder.append(sum);
		builder.append("]");
		builder.append("times");
		
		System.out.println(builder);

	}

}
