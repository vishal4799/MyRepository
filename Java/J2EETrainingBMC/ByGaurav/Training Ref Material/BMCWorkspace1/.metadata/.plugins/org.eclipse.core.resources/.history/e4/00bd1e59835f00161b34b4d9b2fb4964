package com.bmc.exceptions;
//1.Checked exception - if customized exception handling class
//extends java.lang.Exception, becomes checked exception
//2.Unchecked exception -if customized exception handling class
//extends java.lang.RuntimeExceptin,becomes unchecked exception

//Object of User defined exception handling class must be thrown explictly

public class BMCException extends Exception {
	
	public BMCException(){}
	
	//customized exception message
	String message;
	
	//initialization of message
	public BMCException(String message){
		this.message=message;
	}
	//retrieve message for current exception object
	public String getMessage(){
		return message;
	}
	

}
